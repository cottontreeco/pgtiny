<% if signed_in? %>
    <li>
      <%= form_tag(sessions_path, id: "header_signin_form") do %>
          <div class="form-row">
            <div class="editor-cell">
              <%=text_field_tag :email, params[:email], placeholder: "Email" %>
            </div>
            <div class="editor-cell">
              <%=password_field_tag :password, params[:password], placeholder: "Password"%>
            </div>
            <div class="editor-cell">
              <%=submit_tag("Sign in") %>
            </div>
          </div>
      <% end %>
    </li>
<% end %>