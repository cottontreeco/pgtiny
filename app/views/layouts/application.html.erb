<!DOCTYPE html>
<html>
<head>
  <title>Project Tiny | <%= yield(:title) %></title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <!--<= javascript_include_tag :defaults >-->
  <%= csrf_meta_tags %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("rails.png") %>
    <%= @page_title || "Project Tiny" %>
  </div>
  <div id="columns">
    <div id="side">
      <a href="/"> Home </a><br/>
      <a href="about"> About </a><br/>
      <a href="gears"> Products </a><br/>
      <a href="users"> Users </a><br/>
      <% if session[:user_id] %>
        <br/>
        <%= link_to 'Wishes', wishes_path %>
        <br/>
        <%=  button_to 'Logout', logout_path, method: :delete %>
      <% end %>
    </div>
  </div>
  <div id="main">
    <%= yield %>
  </div>
</body>
</html>

