<%provide(:title, @user.name)%>
<p id="notice"><%= notice %></p>

<div class="row">
  <aside class="span4">
    <section>
    <h1>
      <%= gravatar_for @user, size: 100 %>
      <%= @user.name %>
    </h1>
    </section>
  </aside>
</div>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Password:</b>
  <%= @user.hashed_password %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
