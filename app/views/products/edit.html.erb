<%=provide(:title, 'Edit Product')%>
<h1>Edit the product</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@product) do |f| %>
        <%= render(partial: 'form', locals: {f: f})%>
        <%= f.submit("Save changes",
                     class: "btn btn-large btn-primary") %>
    <% end %>
  </div>
</div>

