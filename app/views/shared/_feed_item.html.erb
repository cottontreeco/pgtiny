<li id="<%=feed_item.id%>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <%= render 'microposts/content', micropost: feed_item %>
  <%= render 'microposts/delete_link', micropost: feed_item %>
</li>