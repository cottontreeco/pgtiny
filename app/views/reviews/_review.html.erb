<span class="rating">
  Rating: <%= review.score %>
</span>
<span class="remark">
    <%=wrap(review.remark)%>
</span>
<span class="timestamp">
    Posted <%=time_ago_in_words(review.created_at)%> ago.
</span>
<% if current_user?(review.user) %>
    <%= link_to "edit", edit_review_path(review) %>
<% end %>