<div class="tiny_form">
  <%if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <%end%>

  <%= form_tag do %>
    <fieldset>
      <legend> Please Log In </legend>
      <div>
        <label for="email">Email:</label>
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div>
        <label for="password">Password:</label>
        <%= password_field_tag :pwd, params[:pwd] %>
      </div>
      <div>
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>